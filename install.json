{
    "resources": {
        "head": [
            {
                "type": "style",
                "src": "progress-bar.css"
            },
            {
                "type": "script",
                "src": "progress-bar.js"
            }
        ]
    },
    "preview": {
        "handlers": [
            {
                "options": [ "*" ],
                "execute": "ScrollProgressBar.setOptions(INSTALL_OPTIONS)"
            }
        ]
    },
    "options": {
        "properties": {
            "position": {
                "order": 1,
                "title": "Bar Location",
                "type": "string",
                "enum": [
                    "top",
                    "bottom",
                    "costum"
                ],
                "enumNames": {
                    "top": "Top of the screen",
                    "bottom": "Bottom of the screen",
                    "costum": "Costum placement"
                },
                "default": "top"
            },
            "costumPosition": {
                "showIf": {
                    "position": "costum"
                },
                "order": 2,
                "title": "Costum placement (Distance from top in pixel)",
                "type": "integer",
                "default": 50
            },
            "thickness": {
                "order": 3,
                "title": "Bar Thickness",
                "type": "string",
                "enum": [
                    "2",
                    "3",
                    "5",
                    "10",
                    "costum"
                ],
                "enumNames": {
                    "2": "Thin",
                    "3": "Medium thin",
                    "5": "Standard",
                    "10": "Thick",
                    "costum": "Costum thickness"
                },
                "default": "5"
            },
            "costumThickness": {
                "showIf": {
                    "thickness": "costum"
                },
                "order": 4,
                "title": "Costum thickness (in pixel)",
                "type": "integer",
                "default": 5
            },
            "barColor": {
                "order": 5,
                "type": "string",
                "format": "color",
                "title": "Bar Color",
                "default": "#0096ff"
            },
            "translucent": {
                "order": 6,
                "type": "boolean",
                "title": "Make the bar translucent to show the page beneath it",
                "default": true
            },
            "containerHasColor": {
                "order": 7,
                "type": "boolean",
                "title": "Show a background color behind the bar"
            },
            "containerColor": {
                "order": 8,
                "type": "string",
                "format": "color",
                "title": "Background Color",
                "default": "#FFFFFF",
                "showIf": {
                    "containerHasColor": true
                }
            },
            "showAdvanced": {
                "order": 9,
                "type": "boolean",
                "title": "Show advanced options",
                "default": false
            },
            "advanced": {
                "showIf": {
                    "showAdvanced": true
                },
                "order": 10,
                "type": "object",
                "title": "Advanced options",
                "properties": {
                    "hideUntilScroll": {
                        "order": 1,
                        "type": "boolean",
                        "title": "Hide bar until the page is scrolled"
                    },
                    "hideAfterDone": {
                        "order": 2,
                        "type": "boolean",
                        "title": "Hide bar once the page is fully scrolled"
                    }
                }
            }
        }
    }
}
